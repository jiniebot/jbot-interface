# Server Configuration
NODE_ENV=development
PORT=3000

# Session Security
# IMPORTANT: Generate a secure random string (at least 32 characters) for production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
SESSION_CRYPTO_SECRET=CHANGE_ME_TO_ANOTHER_SECURE_RANDOM_STRING

# Discord OAuth Configuration
DISCORD_CLIENT_ID=1182729608508997725
DISCORD_CLIENT_SECRET=XXX
DISCORD_CALLBACK_URL=http://localhost:3000/auth/callback

# Database Configuration
MONGO_URI=mongodb+srv:XXX
# MongoDB TLS/SSL configuration (optional)
# - MONGO_TLS: true|false (explicitly enable/disable TLS; Atlas requires TLS)
# - MONGO_TLS_ALLOW_INVALID: true|false (allow invalid/self-signed certs; testing only)
# - MONGO_TLS_CA_FILE: /absolute/path/to/ca-bundle.pem (use if you need to validate against a custom CA)
MONGO_TLS=true
MONGO_TLS_ALLOW_INVALID=false
MONGO_TLS_CA_FILE=

# CORS Configuration (Production)
# Comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# Cookie Configuration (Production)
# Set to your domain in production (e.g., .yourdomain.com)
COOKIE_DOMAIN=

# SSL/TLS Configuration
# Set to true in production when using HTTPS
# SECURE_COOKIES=true

# Queue API Configuration (Backend Service)
# IMPORTANT SECURITY SETUP:
# 1. Generate a strong API key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 2. Use the SAME API_KEY or DASHBOARD_API_KEY on both frontend and backend .env files
# 3. For multi-droplet: Set QUEUE_API_URL to backend's PRIVATE IP (e.g., http://10.108.0.2:4310)
# 4. Configure backend firewall to ONLY allow port 4310 from frontend's private IP
# 5. Backend should listen on 0.0.0.0 but be blocked by firewall from external access

# Frontend Server (this file) - connects TO the Queue API
QUEUE_API_URL=http://localhost:4310
DASHBOARD_API_KEY=GENERATE_SECURE_RANDOM_KEY_HERE
API_KEY=GENERATE_SECURE_RANDOM_KEY_HERE

# Backend Queue API Server - SET THESE on the backend droplet's .env:
# API_HOST=0.0.0.0
# API_PORT=4310
# DASHBOARD_API_KEY=SAME_KEY_AS_FRONTEND
# API_KEY=SAME_KEY_AS_FRONTEND

# Queue API CFG cache (ms)
CFG_CACHE_TTL_MS=300000
